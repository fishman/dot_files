# Mu
# mutt macros for mu
macro index <F8> "<shell-escape>mu find --clearlinks --format=links --linksdir=~/Mail/search " \
                  "mu find"
macro index <F9> "<change-folder-readonly>~/Mail/search<return>" \
                  "mu find results"

