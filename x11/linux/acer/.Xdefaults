URxvt.perl-ext: mark-and-yank,matcher
URxvt.perl-lib: /home/hatori/.urxvt/
URxvt.cutchars: `"'()*,;<>[]{|}'"
URxvt.keysym.M-y: perl:mark-and-yank:activate_mark_mode
URxvt.keysym.M-u: perl:mark-and-yank:activate_mark_url_mode
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.matcher.rend.0: fg8
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]

xterm*geometry: 140x36
!XTerm*underLine: on
xterm*customization: -color
!XTerm*visualBell: true
xterm*colorMode: on
xterm*colorBD: lightyellow
