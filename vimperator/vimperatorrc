js <<EOM
commands.addUserCommand(['youtubedl'],
    'YouTube 2 MP3',
    function (args){
          [url] = args;
          liberator.execute('!youtube-dl --extract-audio --audio-format mp3 \''+url+'\'');
          liberator.execute('!mv *.mp3 ~/Music/youtube-dl');
    },
    {}, 
    true
);
EOM

