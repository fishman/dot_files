#! /bin/zsh

if [ x"$HOME" = x ] ; then
  export HOME=$(cd ~ ; pwd)
fi

if [ x"$HOSTNAME" = x ] ; then
  export HOSTNAME=$(hostname)
fi

export FULLNAME="Reza Jelveh"

#export DEBEMAIL=$EMAIL
#export DEBFULLNAME=$FULLNAME

export RXVT_SOCKET=$HOME/.rxvt_socket

export CVS_RSH="ssh"
